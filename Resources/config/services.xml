<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="thecodeine_editor_bundle.form.type.editor" class="TheCodeine\EditorBundle\Form\Type\EditorType" scope="request">
            <tag name="form.type" alias="editor" />
        </service>
        <service id="thecodeine_editor.twig.form_extension" class="TheCodeine\EditorBundle\Twig\Extension\EditorExtension">
            <tag name="twig.extension" />
            <argument>%the_codeine_editor.options.autoinclude%</argument>
            <argument>%the_codeine_editor.options.base_path%</argument>
        </service>
    </services>
</container>